@page
@model EZWiki.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Article</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Article.Id" />
            <div class="form-group">
                <textarea asp-for="Article.Content" class="form-control"></textarea>
                <span asp-validation-for="Article.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Details">Back to Home</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_EditorScript"); }
}

@section Styles {
    @{ await Html.RenderPartialAsync("_EditorStyle"); }
}
